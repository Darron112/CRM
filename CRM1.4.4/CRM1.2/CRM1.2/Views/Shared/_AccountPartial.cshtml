@using Microsoft.AspNet.Identity


@if(User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li style="color:white">
                @Html.ActionLink("Witaj " + User.Identity.GetUserName() + "!", "LoggedIn", "Account", routeValues: null, htmlAttributes: new { title = "Account" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out" style="font-size:large"> Wyloguj</span>
                </a>
            </li>
        </ul>
    }
    <div class="nav-side-menu navbar-fixed-top">
        <div class="brand" style="font-size:large">CRM</div>
        <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

        <div class="menu-list">

            <ul id="menu-content" class="menu-content collapse out">

                <li>
                    <a href="@Url.Action("Index", "Home")" class="elements">
                        <i class="glyphicon glyphicon-home"></i> Strona Główna
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Request")" class="elements">
                        <i class="fa fa-globe fa-lg"></i> Panel zgłoszeń
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Client")" class="elements">
                        <i class="fa fa-users fa-lg"></i> Klienci
                    </a>
                </li>

                @if (this.User.IsInRole("A"))
                {
                <li>
                    <a href="@Url.Action("Index", "Status")" class="elements">
                        <i class="fa fa-car fa-lg"></i> Statusy
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Type")" class="elements">
                        <i class="fa fa-bars fa-lg"></i> Rodzaje
                    </a>
                </li>

                <li>
                    <a href="@Url.Action("Index", "Account")" class="elements">
                        <i class="fa fa-user fa-lg"></i>Użytkownicy
                    </a>
                </li>
                }

            </ul>
        </div>
    </div>

