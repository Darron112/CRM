            @Html.ActionLink("Użytkownicy", "Index", "Account", new { area = "" }, new { @class = "btn navbar-btn btn-lg" })
        }
    </ul>*@


}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Login", "Account")" class="elements">
                <span class="glyphicon glyphicon-log-in" style="font-size:large"> Logowanie</span>
            </a>
